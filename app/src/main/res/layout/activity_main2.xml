<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sciva.envy.lol.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVITY GL VIEW"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <fr.arnaudguyon.smartgl.opengl.SmartGLView
            android:id="@+id/activityGLView"
            android:layout_width="match_parent"
            android:layout_height="304dp" />

        <ImageView
            android:id="@+id/screenshotView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="50"/>

    </LinearLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.sciva.envy.lol.stanGL.MainGLFragment"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:layout="@layout/glfragment"/>


</LinearLayout>
